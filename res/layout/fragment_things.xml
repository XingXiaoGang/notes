<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gv_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl_index"
        android:horizontalSpacing="10sp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10sp" />

    <com.mine.view.button.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="86dp"
        android:src="@drawable/checkbox_light"
        android:visibility="invisible"
        app:fab_colorNormal="@color/blue_title"
        app:fab_colorRipple="@color/white"
        app:fab_label="save"
        app:fab_size="normal" />

    <com.mine.view.button.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_new_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/add_new"
        app:fab_colorNormal="@color/blue_title"
        app:fab_colorRipple="@color/white"
        app:fab_label="add"
        app:fab_size="normal" />

</RelativeLayout>