<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 定义填充渐变颜色 
      android:startColor="@color/shadow"
        android:centerColor="@color/shadow"
        android:endColor="@color/shadow_deep"
    -->
    <gradient
        android:angle="90"
      	android:startColor="@color/transparency"
      	android:centerColor="@color/transparency"
      	android:endColor="@color/transparency"
        android:type="linear" />
    <!-- 设置内填充 -->
    <padding
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp" />
    <!-- 设置圆角矩形 -->
    <corners android:radius="8dp" />

</shape>